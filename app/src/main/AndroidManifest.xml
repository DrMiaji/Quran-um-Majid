<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ibrohim.alquran_um_majid">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ActivityHasilPencarian" />
        <activity
            android:name=".activities.ActivitySplash"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ActivityHasilPencarian" />
        </activity>
        <activity
            android:name=".activities.ActivityReading"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_reading"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.ibrohim.alquran_um_majid.activities.MainActivity" />

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:host="quran.ibrohim.me"
                    android:pathPrefix="/tafsir"
                    android:scheme="web+quran" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityHasilPencarian"
            android:label="@string/title_activity_pencarian"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.ibrohim.alquran_um_majid.activities.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityPengaturan"
            android:label="@string/title_activity_pengaturan"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>